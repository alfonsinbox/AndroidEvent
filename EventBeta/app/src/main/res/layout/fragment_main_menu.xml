<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="fragments.MainMenuFragment">

    <FrameLayout
        android:id="@+id/main_menu_tab_event"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:alpha="@dimen/main_menu_alpha_not_focused">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="E"
            android:textSize="@dimen/main_menu_icon_size"
            android:textColor="#000000"
            android:gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_menu_tab_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:alpha="@dimen/main_menu_alpha_not_focused">

        <ImageView
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_search_black_48dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_menu_tab_create"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:alpha="@dimen/main_menu_alpha_not_focused">

        <ImageView
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_black_48dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_menu_tab_friends"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:alpha="@dimen/main_menu_alpha_not_focused">

        <ImageView
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_people_black_48dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_menu_tab_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:alpha="@dimen/main_menu_alpha_not_focused">

        <ImageView
            android:layout_width="@dimen/main_menu_icon_size"
            android:layout_height="@dimen/main_menu_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_48dp"/>
    </FrameLayout>

</LinearLayout>
