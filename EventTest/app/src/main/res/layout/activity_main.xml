<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/textview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainpage_navigate_profile"
        android:textSize="@dimen/text_large_header_size"
        android:layout_above="@+id/textview_search"
        android:onClick="navigateProfileOverview"/>

    <TextView
        android:id="@+id/textview_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainpage_navigate_search"
        android:textSize="@dimen/text_large_header_size"
        android:layout_above="@+id/textview_create_event"
        android:onClick="navigateEventSearch"/>

    <TextView
        android:id="@+id/textview_create_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainpage_navigate_create_event"
        android:textSize="@dimen/text_large_header_size"
        android:layout_above="@+id/textview_app_name"
        android:onClick="navigateEventCreate"/>

    <TextView
        android:id="@+id/textview_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_large_header_size"
        android:layout_alignParentBottom="true"
        android:onClick="navigateEventMap"/>

    <TextView
        android:id="@+id/textview_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainpage_sign_out"
        android:textSize="@dimen/text_sub_header_size"
        android:padding="@dimen/text_small_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="signOut"/>

</RelativeLayout>